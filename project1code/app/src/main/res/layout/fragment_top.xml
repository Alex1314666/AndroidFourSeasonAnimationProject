<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/TopFragmentLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#03A9F4"
    tools:context=".TopFragment">

    <!-- TODO: Update blank fragment layout -->

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/TopFragTextViewName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/myname"
            android:textAlignment="center"
            android:textSize="16sp" />

        <Button
            android:id="@+id/TopFragButtonStart"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:layout_weight="1"
            android:onClick="onStartClick"
            android:text="@string/start" />

        <Button
            android:id="@+id/TopFragButtonStop"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:layout_weight="1"
            android:onClick="onStopClick"
            android:text="@string/stop" />

    </LinearLayout>

    <ImageView
        android:id="@+id/TopFragImageViewCloud"
        android:layout_width="110dp"
        android:layout_height="100dp"
        android:layout_marginVertical="50dp"
        android:layout_marginLeft="0dp"
        android:src="@drawable/cloud_1" />

    <ImageView
        android:id="@+id/TopFragImageViewSun"
        android:layout_width="110dp"
        android:layout_height="110dp"
        android:layout_marginLeft="50dp"
        android:layout_marginTop="110dp"
        android:src="@drawable/sun3f" />

    <ImageView
        android:id="@+id/TopFragImageViewVBirds"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginLeft="0dp"
        android:layout_marginTop="120dp"
        android:src="@drawable/birds_1" />

</FrameLayout>